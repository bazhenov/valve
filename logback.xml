<configuration scan="true" scanPeriod="1 second">

	<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss} [%thread] %.-1level %logger{36} - %msg%n%mdc%n%ex{6}</pattern>
		</encoder>
	</appender>

	<logger name="com.farpost" level="info"/>

	<root level="warn">
		<appender-ref ref="stdout"/>
	</root>
</configuration>
